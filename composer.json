{
    "name": "bryan-cheru/cytonn-task-management",
    "description": "Complete PHP Task Management System - Cytonn Internship Challenge",
    "version": "1.0.0",
    "type": "project",
    "require": {
        "php": "^8.0.0",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "heroku/heroku-buildpack-php": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"if (!file_exists('logs')) mkdir('logs', 0755, true);\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
